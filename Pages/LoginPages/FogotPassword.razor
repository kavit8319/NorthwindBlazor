@page "/fogotPassword"
@using Northwind.Interface.Server.Pages.LoginPages.reCaptcha
@inherits FogotPasswordModel<FogotPasswordRes>
@attribute [AllowAnonymous]
<EditForm Model="@FogotPasswordObj" OnSubmit="SubmitAsync">
    <DataAnnotationsValidator />
    <div class="input-group ">
        <SfTextBox @bind-Value="@FogotPasswordObj.Email"
                   class="form-control rounded-end"
                   Placeholder="@localResource["Email"]"
                   Type="InputType.Email"
                   FloatLabelType="FloatLabelType.Auto"
                   ID="Password" />
        <ValidationMessage For="(() => FogotPasswordObj.Email)" />
    </div>
    <br />
    <Captcha CaptchaSuccessful="SuccsessfullCaptcha" />
    <br />
    <div class="input-group">
        
        <SfProgressButton @ref="@sfButtonRegister"
                          id="btnRegister"
                          Duration=600
                          EnableProgress=true
                          IconPosition="IconPosition.Right"
                          IsPrimary=true
                          Disabled="@(!EnableBtn)"
                          Content="@localResource["Recovery"]">
        </SfProgressButton>
    </div>
    <div class="input-group d-md-flex">
        <div class="w-50">
            <a href="/login" class="link-primary">@localResource["Back"]</a>
        </div>
    </div>
</EditForm>